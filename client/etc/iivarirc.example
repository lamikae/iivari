#
# Iivari client settings.
# Place this file to either ~/.iivarirc or /etc/iivarirc.
#
{
	# Server base URL
	# -- localhost:8080/client : local iivari-backend
	# -- remotehost:3000/conductor : remote rails server
	"SERVER_BASE" : "http://localhost:8080/client",

	# Logger level -- FATAL, WARN, INFO, DEBUG
	"LOG_LEVEL"   : "INFO",

	# Use shell color codes in log files? -- True, False
	"LOG_COLORS"  : "True",

	# Log file location, set to "None" for stdout.
	# The default is ~/.iivari/log/iivari.log
	"LOG_FILE"    : "/home/infotv/iivari.log",

	# Allow remote content to access local files
	"ALLOW_FILE_ACCESS" : "False"
}
