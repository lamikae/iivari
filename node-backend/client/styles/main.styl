@import 'nib'

body
    background #aaeebb

#notifications
    background #000000
    border 0px solid white
    margin .2em
    padding 0.4em 0.8em
    position absolute
    font-size 1.7em
    z-index 99999
    color white
    opacity 0.7

#slide_title
    background #000000
    border 0px solid white
    margin .2em
    padding 0.4em 0.5em
    position absolute
    font-family times
    font-size 2em
    z-index 99999
    color white
    opacity 0.7

.title_container
    display: none

#state
    background black
    color white
    opacity 0.7
    position absolute
    bottom 250px
    right 1.9em
    padding 0.2em 0.2em 0.4em 0.3em
    z-index 99999
    display none

#state.paused
    color white
    font-weight 900
    font-size 3em
    font-family 'Arial'
    letter-spacing 0.1em
    display block

#next-slide-delay
    background transparent
    color white
    opacity 0.7
    position absolute
    bottom 0
    right 1em
    padding 0.7em
    z-index 99999
