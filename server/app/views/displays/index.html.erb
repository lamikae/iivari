<h1><%= t('.title') %></h1>

<table>
  <tr>
    <th><%= Display.human_attribute_name :hostname %></th>
    <th><%= Display.human_attribute_name :active %></th>
    <th><%= Display.human_attribute_name :channels %></th>
    <th><%= Display.human_attribute_name :last_seen_at %></th>
    <th></th>
    <th></th>
  </tr>

<% @displays.each do |display| %>
  <tr>
    <td><%= link_to display.hostname, display_path(@school.puavo_id, display) %></td>
    <td><%= display.active ? "X" : "" %></td>
    <td><%= display.channels.collect(&:name).join(', ') rescue "" %></td>
    <td><%= display.last_seen_at || t(".not_available") %></td>
    <td><%= link_to t('links.edit'), edit_display_path(@school.puavo_id, display) %></td>
    <td><%= link_to t('links.destroy'), display_path(@school.puavo_id, display), :confirm => t('confirm'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
