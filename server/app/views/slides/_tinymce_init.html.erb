      theme: 'advanced',
      theme_advanced_buttons1: "bold,italic,underline,separator,strikethrough,justifyleft,justifycenter,justifyright,justifyfull,bullist,undo,redo",
      theme_advanced_buttons2: "",
      theme_advanced_buttons3: "",
