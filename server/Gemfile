source 'http://rubygems.org'

gem 'rails', '3.2.1'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

gem 'json'
gem 'jquery-rails'

# Rails 3.1 - Asset Pipeline
group :assets do
  gem 'sass-rails',   '> 3.1'
  gem 'coffee-rails', '> 3.2'
  gem 'uglifier', '>= 1.2'
end

# user management and puavo integration
gem 'ruby-ldap', :require => 'ldap'
gem "authlogic", '>= 3'
gem 'declarative_authorization'
gem 'puavo-client'

# httparty "makes consuming restful web services dead easy."
gem 'httparty'

# ordered many-to-many associations
gem 'acts_as_list'

# rails3-compatible tiny_mce fork
gem 'tinymce-rails', :git => "git://github.com/spohlenz/tinymce-rails.git"

# iivari features
gem "simple_form"
gem "responders"
gem 'rmagick', :require => 'RMagick'

group :development do
  gem 'sqlite3'
  gem "ruby-debug"
  gem 'mongrel'
  gem 'rspec-rails', '>= 2.8.1'
  gem 'cucumber'
  gem 'cucumber-rails'
  gem 'database_cleaner'
  gem 'capybara'
  gem 'sinatra'
  gem 'guard-livereload'
end

group :development, :test do
  # jasmine 1.2.0.rc2 and jhw 0.9.0.rc1 seem to somehow operate together.
  # At least the runner works and can pick up assets, incl. jquery and
  # coffeescript from asset pipeline. Specs can be CS as well.
  # Operation under the covers is not clear, probably rails compiles
  # assets and jhw compiles the specs?
  gem 'jasmine', :git => "git://github.com/pivotal/jasmine-gem.git"
  gem 'jasmine-headless-webkit', :git => "git://github.com/johnbintz/jasmine-headless-webkit.git"

  # an alternative way to run headlessly in browser via Xvfb
  # rake jasmine:ci:headless
  #gem 'headless'
end

group :production do
  gem "pg"
end
