<% content_for :javascript do %>
  <%= javascript_include_tag "slides/index" %>
<% end %>

<h1><%= t('.title', :name => @channel.name) %></h1>


<ul id="slides">
<% @slides.each do |slide| %>
  <li id="slide_<%= slide.id %>">
    <table>
      <tr>
	<td rowspan="2"><span><%= image_tag('transform-move.png', :title => t('.drag') ) %></span></td>
	<td rowspan="2">
	  <iframe style="z-index: -1;" scrolling="no" height="150" width="250" src="/asdfdsasdfsadfasdf/conductor?cache=false&slide_id=<%= slide.id %>&resolution=250x150">
	  </iframe>
	</td>
      
	<td class="title">
	  <%= slide.title %>
	</td>
      </tr>
      <tr>
	<td class="action">
	  <%= link_to image_tag( 'video-display.png', :title => t('links.show') ), channel_slide_path(@channel, slide) %>
	  <%= link_to image_tag('preferences-system.png', :title => t('links.edit') ), edit_channel_slide_path(@channel, slide) %>
	  <%= link_to image_tag('edit-delete.png', :title => t('links.destroy') ), channel_slide_path(@channel, slide), :confirm => t('.confirm'), :method => :delete %>
	</td>
      </tr>
    </table>
    <hr />
  </li>
<% end %>

</ul>

<br />

<% content_for :tools do %>
<div><a href="/asdfdsasdfsadfasdf/conductor?cache=false&resolution=720x405" id="previewSlides" ><%= t('links.preview_channel_slides') %></a></div>
<div><%= link_to t('links.new_slides'), new_channel_slide_path %></div>
<% end %>
