<!DOCTYPE html>
<html>
<head>
  <meta charset=utf-8 />
  <title>Iivari</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "gray/screen.css", :media => 'screen, projection' %>
  <%= stylesheet_link_tag "gray/print.css", :media => 'print' %>
  <%= stylesheet_link_tag "gray/topmenu.css" %>
  <%= stylesheet_link_tag "gray/navmenu.css" %>
  <%= stylesheet_link_tag "gray/iivari.css" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "jquery-ui.min.js" %>
  <%= csrf_meta_tag %>
  <%= include_tiny_mce_if_needed %>
</head>
<body>


  <div class="container">
    <ul id="top-menu" class="menu">
      <% if current_user %>

      <div id="top-menu-right">
	<li><span><%= t('.logged_in_as') %></span></li>
      <li><a href="#"><%= current_user.login %></li>
      <li><%= link_to t('links.logout'), user_session_path(current_user), :method => :delete %></li>
      </div>
      <% end %>
    </ul> <!-- top-menu -->

    <hr class="space" />

    <h1><%= Organisation.current.name %></h1>

    <div id="navbar_first_level">
      <div id="nav1">
	<ul>
	  <li class="<%= controller_name.match(/slides/) \
		     ? "page_item current_page_item" \
						    : "page_item" %>">
	    <%= link_to channel_slides_path(Channel.first) do %>
	    <span><%= t('links.channels') %></span>
	    <% end %>
	  </li>
	  <li class="<%= controller_name.match(/channels/) ? "page_item current_page_item" : "page_item" %>">
	    <%= link_to channels_path do %>
	    <span>Hallinta</span>
	    <% end %>
	  </li>
	</ul>
      </div><!-- nav1 -->
    </div><!-- navbar_first_level -->

    <div id="navbar_second_level">&nbsp;
      <%= render :partial => "#{controller_name}/menu.html.erb" rescue nil %>
    </div><!-- navbar_second_level -->

    <hr class="space" />

    <div class="maincontent">
      <% if flash.has_key?(:notice) %>
      <% if flash.has_key?(:notice_css_class) %>
      <p class='<%= flash[:notice_css_class] %>'>
	<% else %>
      <p class="notice">
	<% end %>
	<%= flash[:notice] %>
      </p>
      <% end %>
      <%= yield %>
    </div>

    <% if current_user && false %>
    <div class="tools">
      <h1><%= t('.tools') %></h1>
      <%= yield :right %>
    </div>
    <% end %>
      
  </div> <!-- container -->
</body>
</html>
