<script src="/javascripts/jqs5.opinsys.js" type="text/javascript"></script> 
<script src="/javascripts/slideshow.js" type="text/javascript"></script> 
<script type="text/javascript">
    var slideNumber = 0;
    $(document).ready(jqs5_init);

    slideData = new Object();
    updateSlideData('<%= @json_url.html_safe %>', <%= @cache %>);
